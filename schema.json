{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "pings"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "pidFile": {
      "type": "string",
      "description": "Path to write the pid to. For the user root defaults to /var/run/avail/main.pid and for other users defaults to /var/run/user/{uid}/avail/main.pid"
    },
    "pings": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Ping"
      }
    }
  },
  "definitions": {
    "Ping": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title",
        "url"
      ],
      "properties": {
        "title": {
          "type": "string",
          "examples": [
            "google"
          ]
        },
        "url": {
          "type": "string",
          "examples": [
            "https://google.com"
          ]
        },
        "interval": {
          "$ref": "#/definitions/Duration",
          "default": "5s"
        },
        "timeout": {
          "$ref": "#/definitions/Duration",
          "default": "30s"
        },
        "proxy": {
          "$ref": "#/definitions/Proxy"
        },
        "check": {
          "$ref": "#/definitions/Check",
          "default": null
        }
      }
    },
    "Proxy": {
      "type": "string",
      "pattern": "^(socks5|http|https)://.*",
      "examples": [
        "socks5://127.0.0.1:9050",
        "http://127.0.0.1:80",
        "https://127.0.0.1:443"
      ]
    },
    "Check": {
      "oneOf": [
        {
          "$ref": "#/definitions/ShellCheck"
        },
        {
          "$ref": "#/definitions/ExecCheck"
        }
      ]
    },
    "ShellCheck": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "script"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "shell"
          ]
        },
        "script": {
          "type": "string"
        },
        "shell": {
          "type": "string",
          "default": "/usr/bin/sh"
        },
        "log": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "ExecCheck": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "exec"
      ],
      "description": "Forks a process and sets a single environment variable, AVAIL_HTTP, pointing to a file containing the raw HTTP response from the specified website. If the process exits with status 0, the host is considered online; otherwise, it is considered offline.",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "exec"
          ]
        },
        "exec": {
          "type": "string",
          "examples": [
            "/usr/bin/some-binary arg1 arg2 arg3"
          ]
        },
        "log": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "Duration": {
      "type": "string",
      "pattern": "^([0-9]+(\\.[0-9]+)?(ns|us|Âµs|ms|s|m|h))+$",
      "examples": [
        "5s"
      ]
    }
  }
}
